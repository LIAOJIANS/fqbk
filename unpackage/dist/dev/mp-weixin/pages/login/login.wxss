.user-set-btn{
	width: 100%;
	margin: 20rpx 0;
	background: #FFE933!important;
	border: 0!important;
	color: #333333!important;
}
.user-set-btn-disable{
	background: #F4F4F4!important;
	border: 1rpx solid #EEEEEE!important;
	color: #909090!important;
}
.body{
	padding: 0 20rpx!important;
}
.common-input{
	font-size: 30rpx;
	border-bottom: 1rpx solid #F4F4F4;
}
.headImg {
  width: 100%;
}
.icon-guanbi {
  position: fixed;
  top: 60rpx;
  left: 30rpx;
  font-style: 40rpx;
  font-weight: bold;
  color: #333;
}
.border {
  padding: 20rpx 10rpx;
  border-bottom: 1px solid #f4f4f4;
}
.border input {
    width: 100%;
    line-height: 50rpx;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    font-size: 32rpx;
    font-weight: bold;
    color: #969696;
}
.border .forget-pwd {
    font-size: 30rpx;
}
.border .phone-top {
    margin-right: 15rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #333333;
}
.border .yzm {
    width: 180rpx;
    line-height: 70rpx;
    text-align: center;
    background: #f4f4f4;
    color: #939393;
    font-size: 28rpx;
    border-radius: 10rpx;
}
.login-type {
  margin: 30rpx 0;
  text-align: center;
  font-size: 30rpx;
}
.login-type view {
    color: #d5d5d5;
}
.other-login-title {
  position: relative;
}
.other-login-title:before, .other-login-title:after {
  content: "";
  position: absolute;
  background: #BBBBBB;
  height: 1rpx;
  width: 100rpx;
  top: 50%;
}
.other-login-title:before {
  left: 25%;
}
.other-login-title:after {
  right: 25%;
}
.login-font-color {
  color: #BBBBBB;
}
.login-padding {
  padding: 20rpx 0;
}

